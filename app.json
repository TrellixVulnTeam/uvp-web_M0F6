{
    "name": "SeeVR",
    "repository": "https://github.com/garytyler/seevr-web",
    "scripts": {
        "postdeploy": "python manage.py migrate"
    },
    "addons": [
        "heroku-postgresql",
        "heroku-redis"
    ],
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        },
        {
            "url": "heroku/python"
        }
    ],
    "env": {
        "SECRET_TOKEN": {
            "generator": "secret"
        },
        "ALLOWED_HOSTS": {
            "value": ".herokuapp.com"
        }
    }
}